<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/gonggao_linearlayout"
        android:layout_height="55dp" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="货箱内部尺寸"/>
        <TextView
            android:id="@+id/tv_hxnbcd"
            style="@style/gonggao_textview2"
            android:text="-- mm(长)  -- mm(宽)  -- mm(高)"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout">
        <TextView
            style="@style/gonggao_textview1"
            android:text="钢板弹簧片数"/>
        <TextView
            android:id="@+id/tv_gbthps"
            style="@style/gonggao_textview2"
            android:text="-/-片"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout">
        <TextView
            style="@style/gonggao_textview1"
            android:text="轴数"/>
        <TextView
            android:id="@+id/tv_zs"
            style="@style/gonggao_textview2"
            android:text="轴数"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="轴距"/>
        <TextView
            android:id="@+id/tv_zj"
            style="@style/gonggao_textview2"
            android:text="轴距"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout"
        android:layout_height="50dp">
        <TextView
            style="@style/gonggao_textview1"
            android:text="轮距"/>
        <TextView
            android:id="@+id/tv_qlj"
            style="@style/gonggao_textview2"
            android:text="-- -- mm(前)   -- --mm(后)"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="轮胎数"/>
        <TextView
            android:id="@+id/tv_lts"
            style="@style/gonggao_textview2"
            android:text="轮胎数"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" 
        android:layout_height="60dp">
        <TextView
            style="@style/gonggao_textview1"
            android:text="轮胎规格"/>
        <TextView
            android:id="@+id/tv_ltgg"
            style="@style/gonggao_textview2"
            android:text="轮胎规格"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout">
        <TextView
            style="@style/gonggao_textview1"
            android:text="总质量"/>
        <TextView
            android:id="@+id/tv_zzl"
            style="@style/gonggao_textview2"
            android:text="总质量"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="整备质量"/>
        <TextView
            android:id="@+id/tv_zbzl"
            style="@style/gonggao_textview2"
            android:text="整备质量"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="额定载质量"/>
        <TextView
            android:id="@+id/tv_hdzzl"
            style="@style/gonggao_textview2"
            android:text="额定载质量"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="准牵引总质量"/>
        <TextView
            android:id="@+id/tv_zqyzl"
            style="@style/gonggao_textview2"
            android:text="准牵引总质量"
             />
    </LinearLayout>
    
    <LinearLayout
        style="@style/gonggao_linearlayout" >
        <TextView
            style="@style/gonggao_textview1"
            android:text="额定载客"/>
        <TextView
            android:id="@+id/tv_hdzk"
            style="@style/gonggao_textview2"
            android:text="额定载客"
             />
    </LinearLayout>
    
</LinearLayout>
