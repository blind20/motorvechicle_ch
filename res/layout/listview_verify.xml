<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    android:orientation="vertical" >
    
	<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bar_bg" >
                
                <Button
			        android:id="@+id/button_back"
			        android:layout_width="65dip"
			        android:text="返回"
			        android:background="@drawable/mm_title_back_btn"
			        android:textColor="@android:color/white"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:onClick="backReport"
			        android:layout_marginLeft="2dip" />
                <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/button_back"
			        android:layout_alignBottom="@+id/button_back"
			        android:layout_centerHorizontal="true"
			        android:gravity="center_vertical"
			        android:text="待授权审核信息"
			        android:textColor="@android:color/white"/>
                
                <Button
		            android:id="@+id/refresh"
		            android:layout_width="wrap_content"
		            android:layout_height="30dp"
		            android:clickable="true"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="8dp"
		            android:text="刷新"
		            android:onClick="onRefresh"
		            android:textColor="@android:color/white"
		            android:background="@drawable/btn_male_bg" />
            </RelativeLayout>
    
    
    <ListView android:id="@+id/lv_verify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"/>
        

</LinearLayout>
